	<field name="from_name" default="" type="text" label="COM_PHOCAEMAIL_FROM_NAME_LABEL" description="COM_PHOCAEMAIL_FROM_NAME_DESC"/>
	
	<field name="email_from" default="" type="text" label="COM_PHOCAEMAIL_EMAIL_FROM_LABEL" description="COM_PHOCAEMAIL_EMAIL_FROM_DESC"/>
	
	<field name="activation_email" default="&lt;div&gt;Hello,&lt;br /&gt; &lt;br /&gt; You recently requested an email subscription to {subscriptionname}.&lt;br /&gt; Please confirm your subscription.&lt;/div&gt;
&lt;p&gt; &lt;/p&gt;
&lt;div&gt;&lt;a style=&quot;background: #0044cc; color: #fff; padding: 5px; -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px;&quot; href=&quot;{activationlink}&quot;&gt;Click here to confirm your subscription to our newsletter&lt;/a&gt;
&lt;/div&gt;&lt;br /&gt;
&lt;div&gt;If the link above does not appear clickable or does not open a browser window when you click it,&lt;br /&gt; copy and paste following link into your web browser&#39;s Location bar:&lt;br /&gt;&lt;br /&gt; {activationlink}&lt;/div&gt;
&lt;br /&gt;
&lt;div style=&quot;color: #777;border-top:1px solid #777&quot;&gt;
&lt;div&gt;This message was sent to you by {sitename}.&lt;/div&gt;
&lt;div&gt;You received this message because you requested a subscription to the {subscriptionname}.&lt;/div&gt;
&lt;div&gt;If you received this in error, please disregard. Do not reply directly to this email.&lt;/div&gt;
&lt;/div&gt;" type="editor" label="COM_PHOCAEMAIL_ACTIVATION_EMAIL_LABEL" description="COM_PHOCAEMAIL_ACTIVATION_EMAIL_DESC" filter="safehtml" />


	<field name="send_unsubscribe_email" type="list" default="1" label="COM_PHOCAEMAIL_FIELD_SEND_UNSUBSCRIBE_EMAIL_LABEL" description="COM_PHOCAEMAIL_FIELD_SEND_UNSUBSCRIBE_EMAIL_DESC">
