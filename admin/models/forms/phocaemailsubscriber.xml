<?xml version="1.0" encoding="utf-8"?>
<form>

	<fieldset addfieldpath="/administrator/components/com_phocaemail/models/fields">

<field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL" required="true" readonly="true" class="readonly" />

<field name="title" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_TITLE_LABEL" description="COM_PHOCAEMAIL_FIELD_TITLE_DESC" />

<field name="alias" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_ALIAS_LABEL" description="COM_PHOCAEMAIL_FIELD_ALIAS_DESC" />

<field name="name" required="false" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_NAME_LABEL" description="COM_PHOCAEMAIL_FIELD_NAME_DESC" />

<field name="email" required="true" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_EMAIL_LABEL" description="COM_PHOCAEMAIL_FIELD_EMAIL_DESC" />



<field name="token" type="phocaemailtoken" manager="token" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_TOKEN_LABEL" description="COM_PHOCAEMAIL_FIELD_TOKEN_DESC" />

<field name="hits" type="text" class="inputbox" size="40" label="COM_PHOCAEMAIL_FIELD_SUBSCRIPTION_ATTEMPTS_LABEL" description="COM_PHOCAEMAIL_FIELD_SUBSCRIPTION_ATTEMPTS_DESC" />

<field name="ordering" type="PhocaEmailOrdering" table="subscriber" class="inputbox" label="COM_PHOCAEMAIL_FIELD_ORDERING_LABEL" description="COM_PHOCAEMAIL_FIELD_ORDERING_DESC" />

<field name="userid" type="user" section="com_phocaemail" default="" label="COM_PHOCAEMAIL_REGISTERED_USER_LABEL" description="COM_PHOCAEMAIL_REGISTERED_USER_DESC"/>

<field name="mailinglist" type="phocaemailmailinglist" multiple="true" manager="subscriber" default="" label="COM_PHOCAEMAIL_REGISTERED_MAILING_LIST_LABEL" description="COM_PHOCAEMAIL_REGISTERED_MAILING_LIST_DESC"/>

<field name="type" type="list" label="COM_PHOCAEMAIL_FIELD_TYPE_LABEL" description="COM_PHOCAEMAIL_FIELD_TYPE_DESC" class="inputbox" size="1" default="1">
	<option value="1">COM_PHOCAEMAIL_HTML</option>
	<option	value="0">COM_PHOCAEMAIL_TEXT</option>
</field>	

<field name="active" type="list" label="COM_PHOCAEMAIL_FIELD_ACTIVE_LABEL" description="COM_PHOCAEMAIL_FIELD_ACTIVE_DESC" class="inputbox" size="1" default="0">
	<option value="1">COM_PHOCAEMAIL_ACTIVE</option>
	<option	value="0">COM_PHOCAEMAIL_NOT_ACTIVE</option>
	<option	value="2">COM_PHOCAEMAIL_UNSUBSCRIBED</option>
</field>	






	</fieldset>
	
	<fieldset name="publish" label="COM_PHOCAEMAIL_GROUP_LABEL_PUBLISHING_DETAILS" >

<field name="published" type="list" label="COM_PHOCAEMAIL_FIELD_PUBLISHED_LABEL" description="COM_PHOCAEMAIL_FIELD_PUBLISHED_DESC" class="inputbox" size="1" default="1">
	<option value="1">JPUBLISHED</option>
	<option	value="0">JUNPUBLISHED</option>
</field>

<field name="date_register" type="Calendar" class="inputbox" label="COM_PHOCAEMAIL_FIELD_SIGN_UP_DATE_LABEL" description="COM_PHOCAEMAIL_FIELD_SIGN_UP_DATE_DESC" format="%Y-%m-%d %H:%M:%S" size="20" filter="user_utc" />
<field name="date_active" type="Calendar" class="inputbox" label="COM_PHOCAEMAIL_FIELD_ACTIVATION_DATE_LABEL" description="COM_PHOCAEMAIL_FIELD_ACTIVATION_DATE_DESC" format="%Y-%m-%d %H:%M:%S" size="20" filter="user_utc" />
<field name="date_unsubscribe" type="Calendar" class="inputbox" label="COM_PHOCAEMAIL_FIELD_UNSUBSCRIPTION_DATE_LABEL" description="COM_PHOCAEMAIL_FIELD_UNSUBSCRIBE_DATE_DESC" format="%Y-%m-%d %H:%M:%S" size="20" filter="user_utc" />
<!--
<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_PHOCAEMAIL_FIELD_LANGUAGE_FILE_DESC" class="inputbox">
	<option value="*">JALL</option>
</field>-->

	</fieldset>
	

	
</form>
